<apex:page controller="JSON_VF_Controller">
    <apex:sectionHeader title="JSON Class"/>
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:inputText value="{!input_value}" label="String"/>
                <apex:inputText value="{!input_object}" label="Acc Name"/>
                <apex:inputText value="{!input_num}" label="Number"/>                
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Convert" action="{!convert_data}"/>
            </apex:pageBlockButtons>
            
        </apex:pageBlock>
        <apex:pageBlock title="Result" rendered="{!render_Result}">
            <apex:pageBlockSection columns="1">
                <apex:outputText label="String :" value="{!out_value}"/>
                <apex:outputText label="Object :" value="{!out_obj}"/>
                <apex:outputText label="Number :" value="{!out_num}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>